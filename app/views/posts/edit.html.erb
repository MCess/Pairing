<h2>Edit Post</h2>

<p><%= form_for(@post) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>
      <%= f.submit "Save Changes", class: "btn btn-primary" %>
      <% end %>
    </p>